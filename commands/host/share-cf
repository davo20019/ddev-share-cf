#!/bin/bash

## Description: Share your DDEV site publicly via Cloudflare Tunnel
## Usage: share-cf
## Example: "ddev share-cf"

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Check if cloudflared is installed
if ! command -v cloudflared &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  cloudflared not found. Installing...${NC}"

    # Detect OS and install
    if [[ "$OSTYPE" == "darwin"* ]]; then
        echo -e "${BLUE}Installing cloudflared via Homebrew...${NC}"
        if command -v brew &> /dev/null; then
            brew install cloudflared
        else
            echo -e "${RED}‚ùå Homebrew not found. Please install Homebrew first: https://brew.sh${NC}"
            exit 1
        fi
    elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
        echo -e "${BLUE}Installing cloudflared for Linux...${NC}"

        # Detect architecture
        ARCH=$(uname -m)
        if [[ "$ARCH" == "x86_64" ]]; then
            CLOUDFLARED_URL="https://github.com/cloudflare/cloudflared/releases/latest/download/cloudflared-linux-amd64"
        elif [[ "$ARCH" == "aarch64" ]] || [[ "$ARCH" == "arm64" ]]; then
            CLOUDFLARED_URL="https://github.com/cloudflare/cloudflared/releases/latest/download/cloudflared-linux-arm64"
        else
            echo -e "${RED}‚ùå Unsupported architecture: $ARCH${NC}"
            exit 1
        fi

        # Download and install
        curl -L "$CLOUDFLARED_URL" -o /tmp/cloudflared
        sudo mv /tmp/cloudflared /usr/local/bin/cloudflared
        sudo chmod +x /usr/local/bin/cloudflared

        echo -e "${GREEN}‚úÖ cloudflared installed successfully${NC}"
    else
        echo -e "${RED}‚ùå Unsupported OS: $OSTYPE${NC}"
        echo -e "${YELLOW}Please install cloudflared manually: https://developers.cloudflare.com/cloudflare-one/connections/connect-networks/downloads/${NC}"
        exit 1
    fi
fi

# Verify cloudflared is now available
if ! command -v cloudflared &> /dev/null; then
    echo -e "${RED}‚ùå Failed to install cloudflared${NC}"
    exit 1
fi

echo -e "${GREEN}‚úÖ cloudflared is installed${NC}"
echo ""
echo -e "${BLUE}üöÄ Starting Cloudflare Tunnel for ${DDEV_SITENAME}...${NC}"
echo -e "${YELLOW}‚è≥ Generating public URL (this may take a few seconds)...${NC}"
echo ""
echo -e "${YELLOW}üí° Tip: Press Ctrl+C to stop the tunnel${NC}"
echo ""

# Start the tunnel
cloudflared tunnel --url https://127.0.0.1:${DDEV_HOST_HTTPS_PORT} --http-host-header ${DDEV_SITENAME}.${DDEV_TLD}
